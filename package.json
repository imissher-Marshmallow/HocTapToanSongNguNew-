{
  "name": "stem-project-monorepo-root",
  "private": true,
  "dependencies": {
    "express": "^5.1.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "openai": "^4.76.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:frontend": "cd stem-project && PORT=5000 HOST=0.0.0.0 npm start",
    "dev:backend": "PORT=3000 node stem-project/backend/server.js",
    "build": "cd stem-project && npm install && npm run build",
    "start": "node stem-project/backend/server.js",
    "postinstall": "cd stem-project && npm install"
  }
}
